{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": "./src"
  },
  "include": [
    "src"
  ]
}