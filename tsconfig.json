{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": "./src"
  },
  "include": [
    "src"
  ]
}